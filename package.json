{
  "name": "parabellum",
  "module": "frontend/src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build:tailwind": "tailwindcss -i frontend/src/css/tailwind.css -o frontend/assets/tailwind.css --minify",
    "build:js": "bun build frontend/src/index.ts --outdir frontend/assets --minify",
    "prod": "bun run build:tailwind && bun run build:js",
    "dev:tailwind": "tailwindcss -i frontend/src/css/tailwind.css -o frontend/assets/tailwind.css --watch",
    "dev:js": "bun build frontend/src/index.ts --outdir frontend/assets --watch",
    "dev": "bun run dev:tailwind && bun run dev:js"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "tailwindcss": "^4.1.17"
  }
}
