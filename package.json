{
  "name": "parabellum",
  "module": "frontend/src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build:css": "bunx @tailwindcss/cli -i frontend/src/css/tailwind.css -o frontend/assets/tailwind.css",
    "build:js": "bun build frontend/src/index.ts --outdir frontend/assets",
    "build:dev": "bun run build:css && bun run build:js --sourcemap=linked",
    "build:release": "bun run build:css --minify && bun run build:js --minify"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "tailwindcss": "^4.1.17"
  }
}
